<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WITH HER WELCOMES YOU!"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#FF1493"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter your name please"
            android:inputType="textPersonName"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter your city please"
            android:inputType="text"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Date Of Birth"
            android:inputType="date"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />


            <TextView
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="PUT ANY 5 CONTACTS OF YOUR CLOSE ONES FOR EMERGENCY PURPOSE"
                android:textColor="#FF1493"
                android:textSize="20dp"
                android:textStyle="italic" />


        <EditText
            android:id="@+id/et4"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Phone no. 1"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />


        <EditText
            android:id="@+id/et5"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Phone no. 2"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />


        <EditText
            android:id="@+id/et6"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Phone no. 3"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />


        <EditText
            android:id="@+id/et7"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Phone no. 4"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />


        <EditText
            android:id="@+id/et8"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Phone no. 5"
            android:inputType="phone"
            android:layout_marginTop="13dp"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="200dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:background="#FF69B4"
            android:text="DONE"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#070707"
            android:gravity="center_horizontal" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
